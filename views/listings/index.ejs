<% layout('layouts/boilerplate.ejs') -%>

<div class="">
  <div class="hero">
    <div class="hero-text">
      <h1>Welcome to RealEstate</h1>
      <p>Find your dream home with us</p>
      <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </div>
  </div>
  <div class="container my-5">
    <h2 class="text-center">Featured Properties</h2>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
      <%for(let ele of data){ %>
      <a
        href="/listing/<%= ele.slug %>"
        class=""
        style="margin-bottom: 2rem; border-radius: 1rem"
      >
        <div class="card property-card">
          <img
            src="http://localhost:4000/uploads/<%= ele.image %>"
            class="card-img-top"
            alt="Property Image"
            style="height: 11rem"
          />
          <div class="card-img-overlay d-flex gap-3">
            <p class="card-text"><small><%= ele.location %></small></p>
            <p class="card-text"><small><%= ele.country %></small></p>
          </div>
          <div class="card-body">
            <h6 class="mb-1"  style="font-size:14px; font-weight: 600;" ><%= ele.title %></h6>
            <p style="font-size: 12px;  ">
              <span>
                <i class="fa-solid fa-indian-rupee-sign"></i>
              </span>
              <%= ele.price %> <span>/ night</span>
            </p>
          </div>
        </div>
      </a>
      <%}%>
    </div>
    <div class="d-flex justify-content-center">
      <a href="/listings" class="bg-primary text-white rounded py-2 px-4 ">
        All Listings
      </a>
    </div>
  </div>
</div>

